%h1 Listing messages

%table
  %thead
    %tr
      %th Sender
      %th Recipient
      %th Text
      %th
      %th
      %th

  %tbody
    - @messages.each do |message|
      %tr
        %td= message.sender
        %td= message.recipient
        %td= message.text
        %td= link_to 'Show', message
        %td= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }

%br

